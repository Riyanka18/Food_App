<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relative"
    tools:context="com.example.spicezilla.activity.ForgotActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/yellow"
        android:id="@+id/relative2">
        <ImageView
            android:id="@+id/imglogo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/bowl"/>
        <TextView
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Enter your registered mobile number and
            email address below: "
            android:id="@+id/enter"
            android:padding="10dp"
            android:textColor="@color/Orange"
            android:textSize="19sp"
            android:textStyle="bold"
            android:layout_below="@+id/imglogo"
            />
        <EditText
            android:id="@+id/phonef"
            android:inputType="text"
            android:layout_width="298dp"
            android:layout_height="40dp"
            android:background="@color/white"
            android:hint="Mobile Number (10 digits)"
            android:maxLength="10"
            android:layout_below="@+id/enter"
            android:padding="10dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            tools:ignore="TextFields" />
        <EditText
            android:id="@+id/emailf"
            android:inputType="textEmailAddress"
            android:layout_width="300dp"
            android:layout_height="43dp"
            android:padding="10dp"
            android:background="@color/white"
            android:hint="Email Address"
            android:layout_below="@+id/phonef"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            />
        <Button
            android:id="@+id/nextf"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@color/darkred"
            android:text="Next"
            android:fontFamily="serif-monospace"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:padding="5dp"
            android:textStyle="bold"
            android:layout_below="@+id/emailf"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:id="@+id/progress_layout">
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
</RelativeLayout>
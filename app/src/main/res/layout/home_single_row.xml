<?xml version="1.0" encoding="utf-8"?>
    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardRestaurant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="36dp">
            <ImageView
                android:id="@+id/imgRestaurant"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/res_image" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="12dp">
                <RelativeLayout
                    android:id="@+id/rlOne"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp">
                    <TextView
                        android:id="@+id/restaurantName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/like"
                        android:padding="2dp"
                        android:textSize="20sp"
                        android:text="@string/restaurant_name"
                        android:textColor="@color/black"
                        />
                    <ImageView
                        android:id="@+id/like"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="6dp"
                        android:layout_marginRight="2dp"
                        android:padding="4dp"
                        android:src="@drawable/fav" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlOne"
                    android:layout_alignParentBottom="true">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="22dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginLeft="-10dp"
                        android:src="@drawable/rupee"
                        android:id="@+id/rup"/>
                    <TextView
                        android:id="@+id/priceforTwo"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@+id/rup"
                        android:padding="3dp"
                        android:layout_marginLeft="-12dp"
                        android:text=" 300/person"
                        android:textColor="@color/black"
                        android:textSize="19sp"
                        />
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="35dp"
                        android:src="@drawable/star"
                        android:id="@+id/star"
                        android:layout_toLeftOf="@+id/restaurantRating"/>
                    <TextView
                        android:id="@+id/restaurantRating"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="2dp"
                        android:layout_marginTop="3dp"
                        android:textSize="22sp"
                        android:text="4.7"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#ffc107"
                        android:textStyle="bold" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

